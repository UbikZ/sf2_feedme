<!-- begin #header -->
<div id="header" class="header navbar navbar-default navbar-fixed-top">
    <!-- begin container-fluid -->
    <div class="container-fluid">
        <!-- begin mobile sidebar expand / collapse button -->
        <div class="navbar-header">
            <a href="{{ url('app') }}#/wall" class="navbar-brand">
                <span class="feedme_logo">
                    {% image '@AppBundle/Resources/public/img/feedme.png' %}
                    <img src="{{ asset_url }}" alt="FeedMe" />
                    {% endimage %}
                    FeedMe
                </span>
            </a>
            <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <!-- end mobile sidebar expand / collapse button -->

        <!-- begin header navigation right -->
        <ul class="nav navbar-nav navbar-right">
            <li>
                <form class="navbar-form full-width">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="{{ 'header.search'|trans }}" />
                        <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </li>
            <li class="dropdown">
                <a href="#" data-toggle="dropdown" class="dropdown-toggle f-s-14">
                    <i class="fa fa-bell-o"></i>
                    {% set msg_flashbag = app.session.flashbag.all() %}
                    <span class="label {% if msg_flashbag|length == 0 %}bg-grey-lighter{% endif %}">
                        {{ msg_flashbag|length }}
                    </span>
                </a>
                <ul class="dropdown-menu media-list pull-right animated fadeInDown">
                    <li class="dropdown-header">{{ 'header.notifications'|trans }} ({{ msg_flashbag|length }})</li>
                    {% for type, messages in msg_flashbag %}
                        {% for message in messages %}
                            <li class="media">
                                <a href="#">
                                    <div class="media-left"><i class="fa fa-bug media-object bg-red"></i></div>
                                    <div class="media-body">
                                        <h6 class="media-heading text-{{ type }}">{{ message }}</h6>
                                        <div class="text-muted f-s-11">{{ "now"|date("G:i:s") }}</div>
                                    </div>
                                </a>
                            </li>
                        {% endfor %}
                    {% endfor %}
                    <li class="dropdown-footer text-center">
                        <a href="#">{{ 'header.view_more'|trans }}</a>
                    </li>
                </ul>
            </li>
            <li class="dropdown navbar-user">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <img src="" alt="gravatar" data-gravatar="80">
                    <span class="hidden-xs"><span data-userfullname="true"></span></span> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu animated fadeInLeft">
                    <li class="arrow"></li>
                    <li><a href="#">{{ 'header.edit_profile'|trans }}</a></li>
                    <li><a href="#"><span class="badge badge-danger pull-right">2</span> {{ 'header.messages'|trans }}</a></li>
                    <li><a href="#">{{ 'header.setting'|trans }}</a></li>
                    <li class="divider"></li>
                    <li><a href="{{ url('fos_user_security_logout') }}">{{ 'header.logout'|trans }}</a></li>
                </ul>
            </li>
        </ul>
        <!-- end header navigation right -->
    </div>
    <!-- end container-fluid -->
</div>
<!-- end #header -->