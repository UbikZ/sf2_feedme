{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST"
      class="fos_user_resetting_reset">
    <div class="form-group">
        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'form.new_password'|trans({}, 'messages')}}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'form.new_password_confirmation'|trans({}, 'messages')}}) }}
    </div>
    <div class="m-b-15 text-danger">
        {{ form_errors(form.plainPassword.first) }}
    </div>
    {{ form_widget(form._token) }}
    <div>
        <input  class="btn btn-theme btn-block btn-lg"
                type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
</form>
